<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="RegisterViewModel"
            type="site.yoonsang.agetoeatschoollunch.view.viewmodels.RegisterViewModel" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/item_school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eland"
            android:textColor="@color/black"
            android:text="@{RegisterViewModel.getSchoolName(position)}"
            app:layout_constraintBottom_toTopOf="@id/item_school_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="성문고등학교" />

        <TextView
            android:id="@+id/item_school_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eland"
            android:textSize="12sp"
            android:text="@{RegisterViewModel.getSchoolLocation(position)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_school_name"
            tools:text="경기도 안양시 만안구 어쩌구 저쩌구" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
