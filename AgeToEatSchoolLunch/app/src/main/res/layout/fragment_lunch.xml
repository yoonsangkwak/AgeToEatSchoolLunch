<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".src.main.fragments.LunchFragment">

        <TextView
            android:id="@+id/lunch_no_diet_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/eland"
            android:visibility="gone"
            android:gravity="center"
            android:text="중식 식단정보가 없습니다."
            android:textSize="18sp" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/lunch_nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lunch_cal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="50dp"
                    android:fontFamily="@font/kotrabold"
                    android:textColor="@color/main_one"
                    android:textSize="24sp"
                    tools:text="888.8 Kcal" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lunch_menu_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_menu" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lunch_origin_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_origin" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:elevation="10dp"
            android:src="@drawable/ic_previous"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/carousel_arrow" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:elevation="10dp"
            android:src="@drawable/ic_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/carousel_arrow" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>